{
  "extends": "./tsconfig.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/config.json"
  ],
  "exclude": ["./src/**/*.test.tsx", "./src/**/*.stories.tsx", "./src/**/*.stories.jsx"],
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib"
  }
}
